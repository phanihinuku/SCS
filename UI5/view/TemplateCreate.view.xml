<core:View controllerName="com.scs.view.TemplateCreate" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" 	xmlns:f="sap.ui.layout.form">
	<Page title="Create Temlate">
		<content>
			<f:SimpleForm 
				minWidth="1024"
				maxContainerCols="2"
				editable="true"
				layout="ResponsiveGridLayout"
				title=""
				labelSpanL="3"
				labelSpanM="3"
				emptySpanL="4"
				emptySpanM="4"
				columnsL="1"
				columnsM="1"
				class="editableForm">
				<f:content>
				
					<Label text="Template Name" />
					<Input value="" id="templateNamecr"  />
					<Label text="Template"  />
					<TextArea value="" id="templateTextcr" />
				</f:content>
			</f:SimpleForm>
	
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button id="createTemplate" press="createTemplate" text="Create" icon="sap-icon://add-product"></Button>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:View>